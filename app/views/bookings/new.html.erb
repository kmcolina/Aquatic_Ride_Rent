<%# <h1>Bookings#new</h1>
<p>Find me in app/views/bookings/new.html.erb</p> %>

<div class="container col-md-5" style="margin-top: 10px">
      <div class="bg-white rounded p-3">
        <h3>Book your reservation</h3>
        <%= simple_form_for [@objeto_acuatico, @booking] do |f| %>
          <% if @booking.errors.any? %>
          <div class="errors-container">
            <ul>
              <% @booking.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= f.input :checkin %>
        <%= f.input :checkout %>
        <%= f.input :capacity %>
        <%= f.submit value:'Book', class:'btn btn-primary' %>
        <%= link_to 'Back', objeto_acuaticos_path, class:'btn btn-dark' %>
        <% end %>
      </div>
</div>
