<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url( <%= asset_path 'bote_azul.jpg' %> );">
  <div class="text-center">
    <h1>Rent a aquatic ride</h1>
    <p>Enjoy</p>
    <div class="container">
      <div class="col-md-6 m-auto">
        <div class="search-form-control form-group">
          <%= form_tag objeto_acuaticos_path, method: :get do  %>
            <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                placeholder: "Find Aquatic Rent" %>
            <%= button_tag(type: "submit", class: "btn btn-primary ") do %>
              <i class="fas fa-search"></i> Search
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="header">
  </div>
  <div class="cards">
    <% @objeto_acuaticos.each do |objeto_acuaticos| %>
      <div class="card">
        <div class="card-body">
          <%= cl_image_tag objeto_acuaticos.photo.key,class:'movie-img', height: 300, width: 400, crop: :fill %>
          <div id="title"><%= objeto_acuaticos.title %>
            <p><%= objeto_acuaticos.description %></p>
          </div>
          <div class="btn btn-primary"><%= link_to 'View details', objeto_acuaticos %></div>
        </div>
      </div>
    <% end %>
  </div>

</div>
